<div class="container-fluid">
  <div class="row">
    <%= render "partials/flash" %>
    <div class="col-md-8"></div>
      <div class="col-md-4">
        <ul class="nav nav-pills">
        <% if @current_user %>
          <li role="presentation" class="active"><a href="/">Home</a></li>
          <li role="presentation"><%= link_to 'Logout', logout_path, method: "delete" %></li>
          <li role="presentation"><%= link_to "#{@current_user.username}", @user %></li>
        <% else %>
          <li role="presentation" class="active"><a href="/">Home</a></li>
          <li role="presentation"><%= link_to 'Login', login_path %></li>
          <li role="presentation"><%= link_to 'Signup', signup_path %></li>
        <% end %>
        </ul>
      </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <h1>Main</h1>
    <p><%= link_to 'Course', courses_path %></p>
    <p><%= link_to 'Recipe', recipes_path %></p>
    <p><%= link_to 'Ingredients', recipes_path %></p>
  </div>
</div>
