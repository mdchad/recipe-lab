<div class="container">
  <div class="row">
    <%= form_for(@recipe) do |f| %>
    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :instruction %>
      <%= f.text_area :instruction, :class => 'form-control'%>
    </div>

    <div class="field form-group">
      <%= f.label :servings %>
      <%= f.number_field :servings, :class => 'form-control'%>
    </div>

    <div class="field form-group">
      <%= f.label :course_id %>
      <%= f.select :course_id, options_for_select(@courses.collect {|x| [x.name, x.id]})%>
    </div>

    <div class="actions">
      <%= f.submit :class => 'btn btn-default'%>
    </div>

    <% end %>

  </div>
</div>
