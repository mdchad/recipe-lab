<div class="container">
  <div class="row">
    <%= form_for(@course) do |f| %>
    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit :class => 'btn btn-default'%>
    </div>

    <% end %>

  </div>
</div>
