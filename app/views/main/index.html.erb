<div class="container-fluid">
  <div class="row">
    <%= render "partials/flash" %>
    <div class="col-md-8"></div>
      <div class="col-md-4">
        <ul class="nav nav-pills">
        <% if @current_user %>
          <li role="presentation" class="active"><a href="/">Home</a></li>
          <li role="presentation"><%= link_to 'Logout', logout_path, method: "delete" %></li>
          <li role="presentation"><%= link_to "#{@current_user.username}", @user %></li>
        <% else %>
          <li role="presentation" class="active"><a href="/">Home</a></li>
          <li role="presentation"><%= link_to 'Login', login_path %></li>
          <li role="presentation"><%= link_to 'Signup', signup_path %></li>
        <% end %>
        </ul>
      </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <h1>Main</h1>
    <ul><%= link_to 'Course', courses_path %>
    <% @courses.each do |course| %>
      <li><%= course.name %></li>
    <% end %>
    </ul>
    <ul><%= link_to 'Recipe', recipes_path %>
    <% @recipes.each do |recipe| %>
      <li><%= recipe.name %></li>
    <% end %>
    </ul>


    <ul><%= link_to 'Ingredients', ingredients_path %>
    <% @ingredients.each do |ingredient| %>
      <li><%= ingredient.name %></li>
    <% end %>
    </ul>

  </div>
</div>
