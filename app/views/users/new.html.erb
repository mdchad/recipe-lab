<div class="container">
  <div class="row">
    <h1>Signup</h1>
    <%= form_for @user, url: signup_path do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@user.errors.count, "error") %> prohibited this blog from being saved:</h3>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field form-group">
        <%= f.text_field :username, placeholder: "Enter your username", :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.email_field :email, placeholder: "Enter your email", :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.password_field :password, placeholder: "Enter your password", :class => 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit "Signup", :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
